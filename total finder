def total_of_5_numbers():
    print("This program calculates the total of 5 numbers.")
    print("Please input 5 numbers when prompted.")
    print("The program will then calculate and display the result.")
    
    try:
        a = int(input("Enter the 1st number: "))
        b = int(input("Enter the 2nd number: "))
        c = int(input("Enter the 3rd number: "))
        d = int(input("Enter the 4th number: "))
        e = int(input("Enter the 5th number: "))
        total = a + b + c + d + e
        print("The total is:", total)
    except ValueError:
        print("Error: Please enter valid integers only.")

# Call the function
total_of_5_numbers()
